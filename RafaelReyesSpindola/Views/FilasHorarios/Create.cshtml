@model RafaelReyesSpindola.Models.FilaHorario

@{
    ViewData["Title"] = "Create";
}


<h4>Creando nueva fila</h4>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HorarioID" class="control-label"></label>
                <select asp-for="HorarioID" class="form-control" asp-items="ViewBag.HorarioID"></select>
            </div>
            <table class="table table-sm">
                <thead>
                    <tr >
                        <th>Entrada</th>
                        <th>Salida</th>
                        <th>Lunes</th>
                        <th>Martes</th>
                        <th>Miercoles</th>
                        <th>Jueves</th>
                        <th>Viernes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="form-group">
                                <input type="time" asp-for="HoraEntrada" class="form-control" style="width: 120px; height:38px; font-size: 12px; font-style:italic; font-weight: bold;"/>
                                <span asp-validation-for="HoraEntrada" class="text-danger"></span>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input type="time" asp-for="HoraSalida" class="form-control" style="width: 120px; height:38px; font-size: 12px; font-style:italic; font-weight: bold;"/>
                                <span asp-validation-for="HoraSalida" class="text-danger"></span>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="DiaUno" class="form-control" asp-items="ViewBag.MateriaNombre"></select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="DiaDos" class="form-control" asp-items="ViewBag.MateriaNombre"></select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="DiaTres" class="form-control" asp-items="ViewBag.MateriaNombre"></select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="DiaCuatro" class="form-control" asp-items="ViewBag.MateriaNombre"></select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select asp-for="DiaCinco" class="form-control" asp-items="ViewBag.MateriaNombre"></select>
                            </div>
                        </td>
                        
                    </tr>

                </tbody>
            </table>
            <div class="row">
                <div class="col">
                    <button type="button" class="btn btn-secondary" OnClick="javascript: return history.back()" style="float: left">
                        Cancelar
                    </button>
                </div>
                <div class="col">
                    <div class="form-group">
                        <input type="submit" value="Añadir" class="btn btn-primary" style="float: right" />
                    </div>
                </div>
            </div>                                                                                                                      
        </form>
    </div>
</div>
