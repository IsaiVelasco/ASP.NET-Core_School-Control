@model RafaelReyesSpindola.Models.Materia

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-lg my-5">
                <div class="card-header">
                    <h4 class="text-center font-weight-light">Registrando materia</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoMateriaID" class="control-label"></label>
                            <select asp-for="TipoMateriaID" class="form-control" asp-items="ViewBag.TipoMateriaID"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="GradoID" class="control-label"></label>
                            <select asp-for="GradoID" class="form-control" asp-items="ViewBag.GradoID"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <div class="small">
                        <a asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
