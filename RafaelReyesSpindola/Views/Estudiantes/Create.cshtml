@model RafaelReyesSpindola.Models.Estudiante

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">    
    <div class="container col-md-11">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="TutorID" class="control-label"></label>
                    <select asp-for="TutorID" class="form-control" asp-items="ViewBag.TutorID"></select>
                    <a asp-area="" asp-controller="Tutores" asp-action="Create">Agregar Tutor</a>
                </div>
                <div class="form-group col">
                    <label asp-for="EscuelaProcedenciaID" class="control-label"></label>
                    <select asp-for="EscuelaProcedenciaID" class="form-control" asp-items="ViewBag.EscuelaProcedenciaID"></select>
                    <a asp-area="" asp-controller="EscuelasProcedencia" asp-action="Create">Agregar Escuela</a>
                </div>
                <div class="form-group col">
                    <label asp-for="PromedioProcedencia" class="control-label"></label>
                    <input type="number" asp-for="PromedioProcedencia" class="form-control" />
                    <span asp-validation-for="PromedioProcedencia" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="ParentescoTutor" class="control-label"></label>
                    <input asp-for="ParentescoTutor" class="form-control" />
                    <span asp-validation-for="ParentescoTutor" class="text-danger"></span>
                </div>
            </div>
            <hr style="margin-top: -10px;"/>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="ApellidoPaterno" class="control-label"></label>
                    <input asp-for="ApellidoPaterno" class="form-control" />
                    <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="ApellidoMaterno" class="control-label"></label>
                    <input asp-for="ApellidoMaterno" class="form-control" />
                    <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                </div>
            </div>
            <div class=" row">
                <div class="form-group col">
                    <label asp-for="Edad" class="control-label"></label>
                    <input asp-for="Edad" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="TipoSangreID" class="control-label"></label>
                    <select asp-for="TipoSangreID" class="form-control" asp-items="ViewBag.TipoSangreID"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Enfermedades" class="control-label"></label>
                    <textarea asp-for="Enfermedades" placeholder="Ingrese la descripción de la(s) Enfermedad(es) y su tratamiento." class="form-control"></textarea>
                    <span asp-validation-for="Enfermedades" class="text-danger"></span>
                </div>
            </div>

            <!--
    <div class="form-group">
        <label asp-for="Matricula" class="control-label"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>-->
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
